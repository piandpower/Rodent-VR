<UserControl x:Class="RodentVRSettings.Views.BehaviorRecordingView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RodentVRSettings.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
			<StackPanel Orientation="Vertical">
				<Label Content="Behavior Recording File Name" Grid.Column="0" Grid.Row="0"/>
				<StackPanel Orientation="Horizontal" Grid.Column="1" Grid.Row="0">
					<TextBox Name="tbBehaviorRecordingFileName" Width="{StaticResource controlWidth}" />
					<Button Name="bttnBehaviorRecordingFileName" Click="bttnBehaviorRecordingFileName_Click" Content="..."/>
				</StackPanel>
			</StackPanel>
</UserControl>
